<!-- partial integreren -->
{{> navigation }}


<article>
    <h2>Welcome to handlebars, {{ firstname }}!</h2>

    <blockquote>
        {{{ motto }}} <!-- hier wordt HTML geÃ«scaped -->
    </blockquote>

    <!-- manier 1 -->
    <p>I would like you to meet my brother: {{ person.firstname }}
    {{ person.lastname }}</p>

    <!-- manier 2, met een block helper #with -->
    <!-- context -->
    {{#with partner}}
        <p>I love my wife: {{ firstname }} {{ lastname }}</p>
    {{/with}}
</article>
<article class="dinos">
    <h2>I have dinos as best friends</h2>
    <ul>
        {{#customEach friends}}
            {{name}}
        {{/customEach}}
        {{#each friends}}
            <li>

                <h3>{{ name }}</h3>

                {{!-- {{#em}}
                    {{#bold}}
                        Deze tekst staat in het vet, {{firstname}}.
                    {{/bold}}
                {{/em}}

                {{#link "een andere tekst" "https://www.google.be" "_blank"}}{{/link}}

                {{#button}}Dit is een knop{{/button}}

                {{#sum 80 40}}{{/sum}}

                {{#unless name}}
                    <h3>Unknown</h3>
                {{/unless}}

                {{#if name}}
                    <h3>{{ name }}</h3>
                {{/if}} --}}

                {{#customIf (isGt 6 4)}}
                    Toon mijn tekst
                {{else}}
                    Verberg mijn tekst
                {{/customIf}}




                <p>Age: {{ age }}</p>
                <img src="{{ image }}" alt="{{ name }}">
            </li>
        {{/each}}
    </ul>
</article>
